<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/textViewNomeTreino"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Nome do Treino"
        android:textSize="16sp"/>

    <ImageButton
        android:id="@+id/buttonEditarTreino"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Editar Treino"
        android:src="@drawable/baseline_edit_24"
        android:background="?attr/selectableItemBackground"
        android:layout_marginEnd="8dp"/>

    <ImageButton
        android:id="@+id/buttonDeletarTreino"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_delete_24"
        android:contentDescription="Deletar Treino"
        android:background="?attr/selectableItemBackground"/>
</LinearLayout>